<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Inter:wght@400;600&display=swap');
        h1, h2, h3 { font-family: 'Playfair Display', serif; }
        body { font-family: 'Inter', sans-serif; }
    </style>
</head>
<body class="bg-stone-50 text-stone-900">
    <!-- Navigation -->
    <nav class="fixed w-full z-50 bg-white/80 backdrop-blur-md border-b border-stone-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-20 items-center">
                <div class="flex-shrink-0 flex items-center">
                    <a href="/" class="text-2xl font-bold text-amber-800 tracking-tighter">{{ site_name }}</a>
                </div>
                <div class="hidden md:flex space-x-10 text-sm font-semibold uppercase tracking-widest">
                    <a href="/" class="hover:text-amber-700 transition">Home</a>
                    <a href="/menu" class="text-amber-700 transition">Menu</a>
                    <a href="/checkout" class="hover:text-amber-700 transition">Cart</a>
                </div>
            </div>
        </div>
    </nav>

    <main class="pt-32 pb-24">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h1 class="text-5xl md:text-6xl mb-4">Our Menu</h1>
                <p class="text-stone-500 max-w-xl mx-auto">Handcrafted dishes with the finest ingredients.</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
                {% for product in products %}
                <div class="bg-white rounded-3xl overflow-hidden shadow-lg border border-stone-100 group transition hover:shadow-2xl">
                    <div class="h-64 overflow-hidden relative">
                        <img src="{{ product.image }}" alt="{{ product.name }}" class="w-full h-full object-cover transition duration-500 group-hover:scale-105">
                        <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-md px-4 py-1 rounded-full text-sm font-bold text-amber-800 shadow-sm">
                            From ${{ product.base_price }}
                        </div>
                    </div>
                    <div class="p-8">
                        <h3 class="text-2xl mb-3">{{ product.name }}</h3>
                        <p class="text-stone-500 text-sm mb-6 leading-relaxed">{{ product.description }}</p>
                        
                        <!-- Variants -->
                        <div class="mb-6">
                            <label class="block text-xs font-bold uppercase tracking-widest text-stone-400 mb-2">Select Style</label>
                            <div class="flex flex-wrap gap-2">
                                {% for variant in product.variants %}
                                <button class="px-3 py-1.5 border border-stone-200 rounded-lg text-xs font-semibold hover:border-amber-600 hover:text-amber-600 transition">
                                    {{ variant.name }}
                                </button>
                                {% endfor %}
                            </div>
                        </div>

                        <!-- Add-ons -->
                        {% if product.add_ons %}
                        <div class="mb-8">
                            <label class="block text-xs font-bold uppercase tracking-widest text-stone-400 mb-2">Enhancements</label>
                            <div class="space-y-2">
                                {% for addon in product.add_ons %}
                                <div class="flex justify-between items-center text-sm">
                                    <span class="text-stone-600">{{ addon.name }}</span>
                                    <span class="font-semibold text-amber-800">+${{ addon.price }}</span>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                        {% endif %}

                        <a href="/checkout" class="block w-full text-center bg-stone-900 text-white py-4 rounded-2xl font-bold hover:bg-amber-800 transition">
                            Add to Order
                        </a>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-stone-900 text-stone-400 py-16 mt-24">
        <div class="max-w-7xl mx-auto px-4 text-center">
            <h2 class="text-white text-3xl mb-8">{{ site_name }}</h2>
            <p class="text-sm">&copy; {{ current_year }} {{ site_name }}. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>

