<section style="padding:36px;border:1px solid var(--line);border-radius:10px;background:{{ section.settings.bg | default: '#fff' }}">
  <h1 style="margin:0 0 8px 0">{{ section.settings.heading }}</h1>
  <p style="color:var(--muted);margin:0 0 14px 0">{{ section.settings.subheading }}</p>
  <a href="{{ section.settings.cta_href }}" style="display:inline-block;padding:10px 14px;background:var(--brand);color:#fff;border-radius:8px;text-decoration:none">
    {{ section.settings.cta_label }}
  </a>
</section>
